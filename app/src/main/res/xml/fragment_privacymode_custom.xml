<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/privacy_custom_general">

        <ListPreference
            android:key="@string/pref_int_privacy_general_interval"
            android:title="@string/privacy_custom_general_interval_title"
            android:summary="%s"
            android:entries="@array/pref_int_privacy_general_interval_entries"
            android:entryValues="@array/pref_int_privacy_general_interval_values"
            android:defaultValue="1"/>

        <SwitchPreference
            android:key="@string/pref_bool_privacy_general_auto"
            android:title="@string/privacy_custom_general_auto_title"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/privacy_custom_data">

        <CheckBoxPreference
            android:key="@string/pref_bool_privacy_data_time"
            android:title="@string/privacy_custom_data_time_title"
            android:summary="@string/privacy_custom_data_time_summary"/>

        <CheckBoxPreference
            android:key="@string/pref_bool_privacy_data_gps"
            android:title="@string/privacy_custom_data_gps_title"/>

        <CheckBoxPreference
            android:key="@string/pref_bool_privacy_data_heart"
            android:title="@string/privacy_custom_data_heart_title"
            android:summary="@string/privacy_custom_data_heart_summary"/>

    </PreferenceCategory>

</PreferenceScreen>